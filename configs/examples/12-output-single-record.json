{
  "id": "output-single-record-example",
  "name": "Output Single Record Mode Example",
  "description": "Example with single record mode (bodyFrom: record)",
  "version": "1.0.0",
  "enabled": true,
  "input": {
    "type": "http-polling",
    "config": {
      "endpoint": "https://api.example.com/users",
      "timeout": 30
    }
  },
  "output": {
    "type": "http-request",
    "config": {
      "endpoint": "https://api.destination.com/users/{userId}",
      "method": "PATCH",
      "request": {
        "bodyFrom": "record",
        "pathParams": {
          "userId": "id"
        },
        "queryParams": {
          "updateSource": "canectors"
        }
      },
      "retry": {
        "maxRetries": 2,
        "backoffMs": 500
      },
      "onError": "skip"
    },
    "authentication": {
      "type": "api-key",
      "credentials": {
        "key": "${API_KEY}",
        "location": "header",
        "headerName": "X-API-Key"
      }
    }
  }
}
